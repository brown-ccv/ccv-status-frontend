<div ...attributes class="incident">
  {{#each @issues as |incident|}}
  {{#if (eq incident.state "open")}}
  {{incident.repo}}
  <div  class="pr-5">
    <div class="d-flex flex-row ml-2 mt-1">
      <span><FaIcon @icon="clock" class="mr-2"/></span>
      <span class="mb-3"><span class="font-weight-bold">{{incident.title}}</span> â€“ {{incident.created_at}}</span>
    </div>
    {{#if (eq this.incidentType "scheduled")}}
    <div class="d-flex flex-row ml-2">
      <span><FaIcon @icon="cogs" @prefix="far" class="mr-2"/></span>
      <span class="d-flex">
        <span class="color-primary font-weight-bold mr-2">[Maintanance]</span>
        <span>{{markdown-to-html incident.body}}</span>
      </span>
    </div>
      {{else}}
    <div class="d-flex flex-row ml-2">
      <span><FaIcon @icon="glasses" class="mr-2"/></span>
      <span class="d-flex">
        <span class="color-warning font-weight-bold mr-2">[Investigating]</span>
        <span>{{markdown-to-html incident.body}}</span>
      </span>
    </div>
    {{#each incident.notes as |note|}}
    <div class="d-flex flex-row ml-2">
      <span><FaIcon @icon="comment" class="mr-2"/></span>
      <span class="d-flex mr-2">
        <span class="color-primary font-weight-bold mr-2">[Update]</span>
        <span>{{markdown-to-html note.body}}</span>
    </span>
    </div>
    {{/each}}
    {{/if}}
  </div>
  {{/if}}
  {{/each}}
</div>
{{yield}}
