<CcvNav />
<HeroArt @repos={{model.repositories}}/>

<div class="heading d-flex justify-content-center flex-column align-items-center">
  {{#each model.repositories as |repo|}}
    <RepoBox @name={{repo.name}} @open={{repo.open_issues_count}} @issues={{repo.issues}} @repo={{repo}}/>
    {{#if (gt repo.open_issues_count 0)}}
    <Incident @repo={{repo}} @state="open" />
    {{/if}}
  {{/each}}
</div>
{{outlet}}
<Footer />
